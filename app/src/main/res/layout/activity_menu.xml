<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_register_blue" />

    <TextView
        android:id="@+id/title_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/title_menu"
        android:textSize="30dp"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/fragment_percobaan"
        android:name="com.po.majuperut.FragmentOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_menu"
        android:layout_marginTop="10dp"
        tools:layout="@layout/fragment_options"></fragment>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_percobaan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_search_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title_menu"
        android:layout_marginBottom="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_bus" />

    <TextView
        android:id="@+id/title_majuperut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imageView"
        android:text="@string/title_main"
        android:textColor="@color/colorRed"
        android:textSize="30sp" />

</RelativeLayout>